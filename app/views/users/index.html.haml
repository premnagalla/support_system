= render partial: 'layouts/sub_header'
.row.content.layout-page
  .col-sm-2.sidenav
    .list-group#item_list.item-list
      = render partial: 'requests/index', locals: { requests: @requests }
  .col-sm-10.text-left#item_detail.item-detail
    - if @requests.present?
      = render partial: 'requests/item', locals: { request: @requests.first }
    - else
      %p
        There are no requests.
