- render_partial = @department.errors.blank? ? 'departments/item' : 'departments/form'
$('#item_detail').html("#{ escape_javascript(render(partial: render_partial, locals: { department: @department })) }");
- if @department.errors.blank?
  $("#department_list_item_#{@department.id}").replaceWith("#{ escape_javascript(render(partial: 'list_item', locals: { department: @department })) }");
