- render_partial = @request.errors.blank? ? 'requests/item' : 'requests/form'
$('#item_detail').html("#{ escape_javascript(render(partial: render_partial, locals: { request: @request })) }");
- if @request.errors.blank?
  $("#request_list_item_#{@request.id}").replaceWith("#{ escape_javascript(render(partial: 'list_item', locals: { request: @request })) }");
